<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cardView" parent="margenAbajo.margenArriba">
        <item name="android:layout_marginBottom">@dimen/marginAbajo12</item>
        <item name="android:layout_marginLeft">@dimen/marginLados</item>
        <item name="android:layout_marginRight">@dimen/marginLados</item>
    </style>

    <style name="margenAbajo">
        <item name="android:layout_marginBottom">@dimen/marginAbajo12</item>
    </style>

    <style name="margenAbajo.margenArriba">
        <item name="android:layout_marginTop">@dimen/marginAbajo12</item>
    </style>

    <style name="tv24">
        <item name="android:textSize">@dimen/textviews24</item>
    </style>

    <style name="tv24.margenIzquierdaChico">
        <item name="android:layout_marginStart">@dimen/margenIzquierdaChico</item>
    </style>

</resources>
